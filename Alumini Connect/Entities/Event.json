{
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "event_date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "start_time": {
      "type": "string",
      "description": "Event start time"
    },
    "end_time": {
      "type": "string",
      "description": "Event end time"
    },
    "location": {
      "type": "string",
      "description": "Event location"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "Reunion",
        "Networking",
        "Workshop",
        "Webinar",
        "Social",
        "Career",
        "Fundraising",
        "Other"
      ],
      "description": "Type of event"
    },
    "registration_required": {
      "type": "boolean",
      "default": false,
      "description": "Whether registration is required"
    },
    "max_attendees": {
      "type": "integer",
      "description": "Maximum number of attendees"
    },
    "registration_deadline": {
      "type": "string",
      "format": "date",
      "description": "Registration deadline"
    },
    "contact_email": {
      "type": "string",
      "format": "email",
      "description": "Contact email for questions"
    },
    "image_url": {
      "type": "string",
      "description": "Event image URL"
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "description": "Whether event is featured"
    },
    "registration_url": {
      "type": "string",
      "description": "External registration URL"
    }
  },
  "required": [
    "title",
    "description",
    "event_date",
    "location",
    "event_type"
  ]
}